<h1>Your Orders</h1>
<% unless @user.orders.empty? %>
  <section class = "shipping-address">
    <table>
      <tr>
        <th>ID</th>
        <th>Date Placed</th>
        <th>Last Updated</th>
        <th>Status</th>
        <th>Item Count</th>
        <th>Grand Total</th>
      </tr>
      <% @user.orders.each do |order| %>
          <tr>
            <section id = "order-<%=order.id%>">
              <% if current_admin? %>
                <td><%= link_to "Order ##{order.id}", admin_user_order_path(@user, order), class: 'reg-link' %></td>
              <% else %>
                <td><%= link_to "Order ##{order.id}", "/profile/orders/#{order.id}", class: 'reg-link' %></td>
              <% end %>
              <td><p><%= order.created_at.strftime('%D') %></p></td>
              <td><p><%= order.updated_at.strftime('%D') %></p></td>
              <td><p><%= order.status %></p></td>
              <td><p><%= order.items_count %></p></td>
              <td><p><%= number_to_currency order.grandtotal %></p></td>
            </section>
          </tr>
        <% end %>
    </table>
  </section>
<% else %>
  <p>No orders yet</p>
<% end %>
