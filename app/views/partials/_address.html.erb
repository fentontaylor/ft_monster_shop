<center>
  <%= form_for [@user, @address], url: path do |f| %>
    <%= f.label :nickname, 'Address nickname' %>
    <%= f.text_field :nickname %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :address %>
    <%= f.text_field :address %>
    <%= f.label :city %>
    <%= f.text_field :city %>
    <%= f.label :state %>
    <%= f.select :state, options_for_select(us_states, @address.state) %>
    <%= f.label :zip %>
    <%= f.text_field :zip %>
    <%= f.submit %>
  <% end %>
</center>
